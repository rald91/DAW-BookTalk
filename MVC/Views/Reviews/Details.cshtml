        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdUtilizadorNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdUtilizadorNavigation.Email)
