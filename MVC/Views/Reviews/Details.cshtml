@model MVC.Models.Review

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Review</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TextoReview)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TextoReview)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataSubmissao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataSubmissao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataAprovacao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataAprovacao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdLivroNavigation)
        </dt>
        <dd class = "col-sm-10">
            @(Model?.IdLivroNavigation?.Autores != null && Model.IdLivroNavigation.Autores.Any() ? string.Join(", ", Model.IdLivroNavigation.Autores.Select(a => a.Name)) : "-")
