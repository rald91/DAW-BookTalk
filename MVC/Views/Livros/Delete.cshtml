@model MVC.Models.Livro

@{
    ViewData["Title"] = "Delete";
}

<h1>Remover</h1>

<h3>Tem certeza de que deseja remover este livro?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        @if (Model?.Autores != null && Model.Autores.Any())
        {
            <dt class = "col-sm-2">
                Autor(es)
            </dt>
            <dd class = "col-sm-10">
                @string.Join(", ", Model.Autores.Select(a => a.Name))
            </dd>
        }
        @if (Model?.Generos != null && Model.Generos.Any())
        {
            <dt class = "col-sm-2">
                Género(s)
            </dt>
            <dd class = "col-sm-10">
                @string.Join(", ", Model.Generos.Select(g => g.Name))
            </dd>
        }
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AnoPublicacao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AnoPublicacao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sinopse)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sinopse)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdLivro" />
        <input type="submit" value="Remover" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-secondary ms-2">Voltar</a>
    </form>
</div>
