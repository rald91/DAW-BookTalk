<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookTalk</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        @await Html.PartialAsync("_Navbar")
    </header>
    <div class="container mt-3"></div>
    <div class="sidebar-overlay"></div>
    <div class="main-content">
    @await Html.PartialAsync("_Sidebar")
            <main role="main" class="pb-3">
                <div class="container">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            @TempData["Success"]
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            @TempData["Error"]
                        </div>
                    }
                </div>
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2026 - BookTalk
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
            <script>
                    // Global cart management in layout so the cart persists across pages and is accessible from navbar
                    (function(){
                            const STORAGE_KEY = 'bookCart';
                            const cartBtn = document.getElementById('globalCartBtn');
                            const cartCountEl = document.getElementById('globalCartCount');

                            function loadCart(){
                                    try{ const raw = localStorage.getItem(STORAGE_KEY); return raw ? JSON.parse(raw) : []; } catch(e){ return []; }
                            }
                            function saveCart(c){ localStorage.setItem(STORAGE_KEY, JSON.stringify(c)); window.dispatchEvent(new CustomEvent('cartUpdated',{detail:{count:c.length}})); }

                            function renderCheckoutModal(){
                                    // create modal markup if not present
                                    if(document.getElementById('globalCheckoutModal')) return;
                                    const html = `
    <div class="modal fade" id="globalCheckoutModal" tabindex="-1" aria-labelledby="globalCheckoutModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Carrinho de Reservas</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="globalCheckoutList"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                    <button type="button" id="globalCheckoutSubmit" class="btn btn-success">Finalizar Reserva(s)</button>
                </div>
            </div>
        </div>
    </div>`;
                                    document.body.insertAdjacentHTML('beforeend', html);
                            }

                            function updateBadge(){
                                    const c = loadCart();
                                    if(cartCountEl) cartCountEl.textContent = c.length;
                            }

                            function openCartModal(){
                                    renderCheckoutModal();
                                    const listEl = document.getElementById('globalCheckoutList');
                                    const cart = loadCart();
                                    if(cart.length === 0){ listEl.innerHTML = '<div class="text-muted">Carrinho vazio.</div>'; }
                                    else{
                                            const ul = document.createElement('ul'); ul.className = 'list-group';
                                            cart.forEach((c, idx)=>{
                                                    const li = document.createElement('li'); li.className = 'list-group-item d-flex justify-content-between align-items-start';
                                                    li.innerHTML = `<div><strong>${c.livroText}</strong><div class="text-muted">${c.start} → ${c.end} (${c.days} dias)</div></div>`;
                                                    const btn = document.createElement('button'); btn.className='btn btn-sm btn-outline-danger'; btn.textContent='Remover';
                                                    btn.addEventListener('click', ()=>{ cart.splice(idx,1); saveCart(cart); updateBadge(); openCartModal(); });
                                                    li.appendChild(btn); ul.appendChild(li);
                                            });
                                            listEl.innerHTML = ''; listEl.appendChild(ul);
                                    }
                                    const modal = new bootstrap.Modal(document.getElementById('globalCheckoutModal'));
                                    modal.show();
                                    document.getElementById('globalCheckoutSubmit').onclick = async function(){
                                            if(cart.length === 0){ alert('Carrinho vazio.'); return; }
                                            const payload = cart.map(c => ({ LivroId: c.livroId, DataInicio: c.startRaw, DataFim: c.endRaw }));
                                            try{
                                                    const res = await fetch('@Url.Action("Checkout", "Reservas")', { method: 'POST', headers: {'Content-Type':'application/json'}, body: JSON.stringify(payload) });
                                                    if(!res.ok){ const err = await res.json(); alert(err.message || 'Erro'); return; }
                                                    // success: clear cart, update badge and show simple success then redirect to home
                                                    saveCart([]); updateBadge();
                                                    modal.hide();
                                                    const successHtml = `<div class="modal fade" id="globalSuccessModal" tabindex="-1"><div class="modal-dialog modal-dialog-centered"><div class="modal-content"><div class="modal-body text-center"><h4 class="text-success">Reserva(s) criada(s) com sucesso!</h4><div class="mt-3"><button id="globalSuccessContinue" class="btn btn-primary">Continuar</button></div></div></div></div></div>`;
                                                    document.body.insertAdjacentHTML('beforeend', successHtml);
                                                    const sModal = new bootstrap.Modal(document.getElementById('globalSuccessModal'));
                                                    sModal.show();
                                                    document.getElementById('globalSuccessContinue').addEventListener('click', ()=>{ window.location.href = '@Url.Action("Index","Home")'; });
                                            } catch(e){ alert('Erro interno: ' + e.message); }
                                    };
                            }

                            // initialize
                            updateBadge();

                            // events
                            window.addEventListener('cartUpdated', e=> updateBadge());
                            window.addEventListener('openCartModal', ()=> openCartModal());
                            cartBtn?.addEventListener('click', ()=> openCartModal());
                    })();
            </script>
                    <div class="modal fade" id="globalInfoModal" tabindex="-1" aria-labelledby="globalInfoModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="globalInfoModalLabel">Informação</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body" id="globalInfoModalBody">Mensagem</div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">OK</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <script>
                            // show info modal when needed
                            (function(){
                                    window.addEventListener('showInfo', function(e){
                                            var msg = e.detail && e.detail.message ? e.detail.message : 'Informação';
                                            document.getElementById('globalInfoModalBody').textContent = msg;
                                            var m = new bootstrap.Modal(document.getElementById('globalInfoModal'));
                                            m.show();
                                    });
                            })();
                    </script>
                    <!-- Global confirmation modal for destructive actions -->
                    <form id="globalConfirmForm" method="post" style="display:none">
                    </form>

                    <div class="modal fade" id="globalConfirmModal" tabindex="-1" aria-labelledby="globalConfirmModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="globalConfirmModalLabel">Confirmar ação</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body" id="globalConfirmModalBody">Tem a certeza?</div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                    <button type="button" id="globalConfirmOk" class="btn btn-danger">Confirmar</button>
                                </div>
                            </div>
                        </div>
                    </div>
            <script>
                (function(){
                    let pendingHref = null;
                    document.addEventListener('click', function(e){
                        const target = e.target.closest && e.target.closest('.confirm-delete');
                        if(!target) return;
                        e.preventDefault();
                        const title = target.getAttribute('data-delete-title') || 'Confirmar';
                        const msg = target.getAttribute('data-delete-message') || 'Tem a certeza?';
                        const modalEl = document.getElementById('globalConfirmModal');
                        document.getElementById('globalConfirmModalLabel').textContent = title;
                        document.getElementById('globalConfirmModalBody').textContent = msg;
                        pendingHref = target.getAttribute('href') || target.getAttribute('data-href');
                        const modal = new bootstrap.Modal(modalEl);
                        modal.show();
                    });

                    document.getElementById('globalConfirmOk').addEventListener('click', function(){
                        if(!pendingHref) return;
                        // submit hidden POST form to perform action (ensures POST is used and antiforgery token sent)
                        const form = document.getElementById('globalConfirmForm');
                        if(form){
                            form.action = pendingHref;
                            form.submit();
                        } else {
                            window.location.href = pendingHref;
                        }
                    });
                })();
            </script>
                    <div style="display:none">
                    </div>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
    </html>
