@model List<MVC.Models.CartItem>
@{
    ViewData["Title"] = "Carrinho";
}

<h1>Carrinho de Reservas</h1>

@if (Model == null || Model.Count == 0)
{
    <div class="text-muted">Carrinho vazio.</div>
}
else
{
    <div class="list-group">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <strong>@Model[i].LivroText</strong>
                    <div class="text-muted">@Model[i].DataInicio.ToString("yyyy-MM-dd") â†’ @Model[i].DataFim.ToString("yyyy-MM-dd")</div>
                </div>
                <div class="d-flex gap-2">
                    <form asp-controller="Cart" asp-action="Remove" method="post">
                        <input type="hidden" name="index" value="@i" />
                        <button type="submit" class="btn btn-sm btn-outline-danger">Remover</button>
                    </form>
                </div>
            </div>
        }
    </div>
    <div class="mt-3 d-flex justify-content-end">
        <form asp-controller="Cart" asp-action="Checkout" method="post">
            <button type="submit" class="btn btn-success">Finalizar Reserva(s)</button>
        </form>
    </div>
}
